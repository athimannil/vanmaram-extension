{
  "name": "Malayalam Dictionary",
  "description": "A browser extension for Vanmaram Dictionary",
  "version": "2.6.2",
  "manifest_version": 3,
  "author": "Muhammed Athimannil",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "homepage_url": "https://www.vanmaram.com",
  "host_permissions": ["https://beta.vanmaram.com/api/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Malayalam Dictionary"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "vanmaram-extension@athimannil.com",
      "strict_min_version": "109.0"
    }
  }
}
